      flex-direction: column;
      align-items: center;
      min-height: 100vh;
    }
    h1 {
      margin: 0 0 8px 0;
      font-size: 1.6rem;
    }
    #subtitle {
      margin: 0 0 16px 0;
      font-size: 0.95rem;
      opacity: 0.8;
      text-align: center;
    }
    #hud {
      display: flex;
      gap: 16px;
      align-items: center;
      margin-bottom: 16px;
      font-size: 0.95rem;
    }
    #hud button {
      padding: 6px 14px;
      border-radius: 999px;
      border: 1px solid #4b5563;
      background: #111827;
      color: #e5e7eb;
      cursor: pointer;
    }
    #hud button:hover {
      background: #1f2937;
    }
    #board {
      display: grid;
      grid-template-columns: repeat(8, minmax(0, 1fr));
      gap: 10px;
      max-width: 960px;
      width: 100%;
    }
    .card {
      position: relative;
      background: #020617;
      border-radius: 10px;
      border: 1px solid #4b5563;
      height: 150px;
      cursor: pointer;
      overflow: hidden;
      box-shadow: 0 8px 18px rgba(0, 0, 0, 0.6);
      transition: transform 0.12s ease, box-shadow 0.12s ease, opacity 0.2s ease;
    }
    .card:active {
      transform: scale(0.97);
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.7);
    }
    .card.matched {
      opacity: 0.35;
      cursor: default;
      box-shadow: none;
    }
    .card-face {
      position: absolute;
      inset: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 6px;
    }
    .card-front {
      background: radial-gradient(circle at 30% 20%, #1f2937, #020617);
      font-size: 2rem;
      font-weight: 600;
      letter-spacing: 2px;
    }
    .card-back {
      display: none;
      background: #020617;
    }
    .card.flipped .card-front {
      display: none;
    }
    .card.flipped .card-back {
      display: flex;
    }
    /* Name cards */
    .name-card {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      width: 100%;
